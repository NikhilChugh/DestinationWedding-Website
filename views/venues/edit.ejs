<% include ../partials/header %>


<div class = "container">
    <div class = "row">
       
        <div style = "width: 30%; margin: 125px auto;">
         <h1 style = "text-align: center; font-weight: 500;" class = "display-4">Edit <%= venue.name %></h1>    
         <form action = '/venues/<%= venue._id %>?_method=PUT' method = 'POST'>
          <div class="form-group">
            <input type="text" name="venue[name]" class="form-control"  value = '<%= venue.name %>'>
          </div>
          <div class="form-group">
              <input type = "number" name="venue[price]" class="form-control" value="<%= venue.price %>" min = "0" step = "0.01">
          </div>
          <div class="form-group">
            <input type="text" name="venue[image]" class="form-control" value = '<%= venue.image %>'>
          </div>
          <div class= "form-group">
              <input type="text" name="venue[description]" class="form-control" value = '<%= venue.description %>'>
          </div>
          <div class="form-group">
          <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a href='/venues'>Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>